
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id        Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String @unique
  hash      String
  name      String

  runs Run[]

  @@map("users")
}

model Run {
  id        Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title     String

  userId    Int
  user      User @relation(fields: [userId], references: [id])

  @@map("runs")
}
